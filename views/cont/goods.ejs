    <style>
        .goods_box {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin-top: 20px;
        }
        .goods_box>div{
            margin-right: 15px;
        }
        .text-box {
            position: relative;
            line-height:16px;
            font-size: 16px;
            height:47px;
            overflow: hidden;
        }
        .text-box::after{
            content:"...";
            font-weight:bold;
            display: inline-block;
            width: 15px;
            height: 16px;
            background: #fff;
            position:absolute;
            bottom:0;
            right:0;
            /*padding:0 20px 1px 45px;*/
        }
        .warp {
            width: 100%;
            padding: 0 5%;
            margin: 0 auto;
        }
        .margin-left {
            margin-left: 5px;
        }
        .anchor {
            display: inline-block;
            float: right;
            margin-top: 8px;
        }
    </style>
</head>
